<form action="/admin/contato/new" method="POST">
    <div class="form-inline">
        <label>Nome: &emsp;</label>
        <input class="form-control" name="nome" id="nome" type="text" size="40" placeholder="Seu nome..." autocomplete="name">
        
    </div>
    <br>
    <div class="form-inline">
        <label>Tipo do Contato: &emsp;</label>
        <select class="form-control" id="tipoContato" name="tipoContato" onchange="contatoSelect()">
            <option value="" selected disabled></option>
            <option>E-mail</option>
            <option>Telefone</option>
            <option>Outro</option>
            
        </select>
    
        <label>&emsp;&emsp;Contato: &emsp;</label>
        <input class="form-control" name="contato" id="contato" size="50" >

        &emsp;<button class="btn btn-warning" type="reset">Limpar</button>&emsp;&emsp;
        <button class="btn btn-success" type="submit">Enviar</button>
        
    </div>
    <br>
    <div class="form-group">
        <label for="mensagem">Mensagem: </label>
        <textarea class="form-control" name="mensagem" id="mensagem" rows="5" placeholder="Digite sua mensagem..."></textarea>
    </div>
</form>
